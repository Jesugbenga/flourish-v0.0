{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "backend",
    "runtime": "nodejs18",
    "ignore": [
      "node_modules",
      ".git",
      "*.local"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
